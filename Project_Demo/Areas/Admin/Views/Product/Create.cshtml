@model ProductModel
@{
    ViewData["title"] = "Create Products";
}
<h4>Create Products</h4>
<div class="col-md-9">
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for ="Name" class="text-danger"/>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" ></textarea>
        <span asp-validation-for="Description" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
            <option>--Chose a category</option>
        </select>
        <span asp-validation-for="Category" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select asp-for="BrandID" class="form-control" asp-items="ViewBag.Brands">
            <option>--Chose a brand</option>
        </select>
        <span asp-validation-for="Brand" class="text-danger" />
    </div>
    <div class="form-group">
        <label>Image</label>
        <input asp-for="Image" class="form-control"/>
        <span asp-validation-for="Image" class="text-danger"/>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Create</button>
    </div>
</form>
<a asp-action="Index">Back to list product</a>
</div>